<!DOCTYPE html>
<html lang="nl">

<head>
  {% block head %}
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="apple-touch-icon" sizes="180x180" href="/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicons/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicons/favicon-16x16.png">
    <link rel="manifest" href="/favicons/site.webmanifest">
    <link rel="mask-icon" href="/favicons/safari-pinned-tab.svg" color="#312c21">
    <link rel="shortcut icon" href="/favicons/favicon.ico">
    <meta name="msapplication-TileColor" content="#ffd9bb">
    <meta name="msapplication-config" content="/favicons/browserconfig.xml">
    <link rel="preload" as="font" href="{{ theme_url }}/assets/fonts/quicksand/quicksand-v8-latin-regular.woff2" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" as="font" href="{{ theme_url }}/assets/fonts/quicksand/quicksand-v8-latin-500.woff2" type="font/woff2" crossorigin="anonymous">
    <meta name="theme-color" content="#FFD9BB">
    <title>{{ site.title }}</title>

    {% block criticalCSS %}

    <!-- Critical CSS -->
    {% do assets.addCss('theme://assets/compiled/styles/main.critical.css', {'group':'criticalCSS', 'loading': 'inline'}) %}

    {% endblock %}
    {{ assets.css('criticalCSS') }}
    
  {% endblock head%}

</head>

<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">

    {% block header_navigation %}
        {% include 'partials/navigation.html.twig' %}
    {% endblock %}

    {% block body %}
        {% block content %}{% endblock %}
    {% endblock %}

    {% block footer %}
        {% include 'partials/footer.html.twig' %}
    {% endblock %}

    {% block stylesheets %}

    <!-- Custom CSS -->
    {% do assets.addCss('theme://assets/compiled/styles/main.css',100) %}
    
    {% endblock %}
    {{ assets.css() }}

    {% block scripts %}

      <!-- Custom Theme JavaScript -->
      {% do assets.addJs('theme://assets/compiled/scripts/Vendor.js', {'loading':'async'}) %}
      {% do assets.addJs('theme://assets/compiled/scripts/modernizr.js', {'loading':'async'}) %}

      {% do assets.addJs('theme://assets/compiled/scripts/App.js', {'loading':'async'}) %}

    {% endblock %}
  {{ assets.js() }}

</body>

</html>
